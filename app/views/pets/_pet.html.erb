<div class="col">
  <div class="card h-100">
    <img src="https://source.unsplash.com/random/150x200/?<%= pet.specie%>" class="card-img-top" height='200px'>
    <div class="card-body">
      <h5 class="card-title"><%= pet.description %></h5>
      <p class="card-text">Found in <%= pet.address %></p>
      <p class="card-text">Found at <%= pet.found_at %></p>
    </div>
    <div class="card-footer text-center">
      <%= link_to 'Found', pet_path(pet), class: 'btn btn-warning', data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
    </div>

  </div>
</div>
